<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kapooo.ssm.mapper.MallMapper">


    <!--查询所有商城信息-->
    <select id="selectAll" resultType="cn.kapooo.ssm.domain.Mall">
        select id, name, sn, status from mall
    </select>

    <!--保存商城信息-->
    <insert id="save" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into mall (name, sn, status) values (#{name}, #{sn}, #{status})
    </insert>

    <!--修改商城信息-->
    <update id="update">
        update mall set name = #{name}, sn = #{sn}, status = #{status}
        where id = #{id}
    </update>

    <!--根据id查找商城信息-->
    <select id="selectById" resultType="cn.kapooo.ssm.domain.Mall">
        select id, name, sn, status from mall
        where id = #{id}
    </select>

    <!--删除商城信息-->
    <delete id="delete">
        delete from mall
        where id = #{id}
    </delete>

    <!--查询数据总条数-->
    <select id="selectForCount" resultType="int">
        select count(id) from mall
    </select>

    <!--查询每个分页的数据-->
    <resultMap id="baseResultMallGetGoodsNum" type="cn.kapooo.ssm.domain.Mall">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="sn" property="sn"/>
        <result column="status" property="status"/>

        <association property="mallGoodsNum" javaType="cn.kapooo.ssm.domain.Mall"
                     column="id"
                     select="cn.kapooo.ssm.mapper.MallMapper.getMallGoodsNum"/>
        <collection property="goodsList" ofType="cn.kapooo.ssm.domain.Goods"
                    column="id"
                    select="getMostNumGoods"/>
    </resultMap>
    <select id="selectForList" resultMap="baseResultMallGetGoodsNum">
        select id, name, sn, status from mall
<!--        limit #{start}, #{pageSize}-->
    </select>

    <!--获取商城货物数量-->
    <select id="getMallGoodsNum" resultType="integer">
        select count(id) from goods
        where shopId in(select id from shop where MallId = #{id})
    </select>

    <!--根据商场id获取销量最高的-->
    <select id="getMostNumGoods" resultType="cn.kapooo.ssm.domain.Goods">
        select * from goods
        where shopId in(select id from shop where MallId = #{id})
        ORDER BY num DESC limit 0,3
    </select>
</mapper>